<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="general_home_addr"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />

    <ListPreference
        android:defaultValue="@string/pref_default_make"
        android:key="car_make"
        android:entries="@array/make"
        android:entryValues="@array/make"
        android:title="@string/pref_title_make" />

    <ListPreference
        android:defaultValue="@string/miles"
        android:key="general_distance_format"
        android:entries="@array/imperial_distance"
        android:entryValues="@array/imperial_distance"
        android:title="@string/distance_format_title" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="general_track_on_nav"
        android:title="@string/pref_title_track_on_nav" />

    <Preference android:title="Logout of Spotify"
                android:key="spotifyLogout"
                android:summary="Click to logout"/>

</PreferenceScreen>